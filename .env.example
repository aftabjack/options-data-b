# Bybit Options Production Environment Configuration
# Copy this file to .env and customize your settings

# Service Ports (customize these for your deployment)
WEBAPP_PORT=5001
API_PORT=8000
REDIS_PORT=6380
HEALTH_CHECK_PORT=8080

# Resource Limits
TRACKER_MEMORY_LIMIT=256m
TRACKER_CPU_LIMIT=1.0
WEBAPP_MEMORY_LIMIT=256m
WEBAPP_CPU_LIMIT=0.5
API_MEMORY_LIMIT=256m
API_CPU_LIMIT=0.5
CRON_MEMORY_LIMIT=128m
CRON_CPU_LIMIT=0.25

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# WebSocket Configuration
WS_PING_INTERVAL=45
WS_PING_TIMEOUT=15
WS_RECONNECT_DELAY=10
WS_SUBSCRIPTION_CHUNK_SIZE=100
BATCH_SIZE=200
BATCH_TIMEOUT=2.0

# Tracker Configuration
CLEAR_DB_ON_START=false
SYMBOL_CACHE_TTL=86400
OPTION_ASSETS=BTC,ETH,SOL
STATS_INTERVAL=30

# Telegram Notifications (Optional)
ENABLE_NOTIFICATIONS=false
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_NOTIFICATION_CHANNEL=

# Web Dashboard
AUTO_REFRESH_INTERVAL=5000

# Logging
LOG_LEVEL=INFO

# Docker Settings
RESTART_POLICY=unless-stopped
DOCKER_NETWORK_NAME=bybit-network

# Environment
ENV=production